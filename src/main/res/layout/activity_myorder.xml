<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FFEA1515"

        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="33dp"
            android:onClick="onClick"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的订单"
            android:textColor="@color/colorWhite1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_addorder"
            android:layout_width="30dp"
            android:onClick="onClick"
            android:layout_height="33dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_add" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8e7e6"
        android:gravity="center">

        <RadioGroup
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/tv_unRecive_order"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:textColor="@drawable/btn_order_color"
            android:drawableBottom="@drawable/btn_order"
            android:gravity="center"
            android:onClick="onClick"
            android:text="未接单" />

        <RadioButton
            android:id="@+id/tv_recive_order"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableBottom="@drawable/btn_order"
            android:gravity="center"
            android:textColor="@drawable/btn_order_color"
            android:onClick="onClick"
            android:text="已接单" />

        <RadioButton
            android:id="@+id/tv_complete_order"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:onClick="onClick"
            android:textColor="@drawable/btn_order_color"
            android:drawableBottom="@drawable/btn_order"
            android:gravity="center"
            android:text="已完成单" />

        <RadioButton
            android:id="@+id/tv_ordered"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:button="@null"
            android:drawableBottom="@drawable/btn_order"
            android:gravity="center"
            android:textColor="@drawable/btn_order_color"
            android:text="暂无此功能" />
        </RadioGroup>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/id_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        />


</LinearLayout>
